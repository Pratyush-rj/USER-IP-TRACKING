@model IEnumerable<IP_Tracking.Models.Address>

@{
    ViewBag.Title = "Index";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Cormorant+Garamond:wght@700&family=Ysabeau+SC:wght@700&display=swap" rel="stylesheet">    <style>
        
        body {
            background-color: #333; 
            color: white; 
        }

        .editButton {
           
            min-width: 150px;
            background-color: darkblue;
            
            background-image: linear-gradient(to right, #ff6a00, #ee0979);
            
            color: white;
            
            padding: 5px 10px;
            
            white-space: nowrap;
        }

        .searchButton {
            
            min-width: 100px;
            background-color: darkblue;
          
            background-image: linear-gradient(to right, #ff6a00, #ee0979);
            
            color: white;
          
            padding: 5px 10px;
          
            white-space: nowrap;
        }

       
        h1 {
            font-family: 'Ysabeau SC', sans-serif;
            background-image: linear-gradient(to right, #ff6a00, #ee0979);
            
            color: white;
           
            padding: 10px;
        }

        table {
            color: white;
            background-color: #333; 
        }

        
        th {
            background-color: #333; 
        }

        
        tr {
            background-color: #333; 
        }
    </style>
</head>


<br>
<br>
<br>

<center>
    <h1><strong><u>USER IP INFO</u></strong></h1>
</center>

<br>
<br>



@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">
        <strong>Info : </strong>   @TempData["InfoMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success ! </strong>   @TempData["InfoMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Error ! </strong>   @TempData["InfoMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
}



<div style="display: flex; align-items: center;">
    <div>
        <p>@Html.ActionLink("Create New Record", "Create", null, new { @class = "btn btn-primary editButton" })</p>
    </div>
    <div style="margin-left: 500px;">
    @using (Html.BeginForm("Index", "Address", FormMethod.Get))
    {
        <table>
            <tr>
                <td>
                    <span><b>Search By: </b></span>
                    @Html.RadioButton("searchBy", "itr_section", true)
                    <text>ITR Section</text>
                    @Html.RadioButton("searchBy", "empname", true)
                    <text>Employee Name</text>
                    @Html.RadioButton("searchBy", "ipaddress", true)
                    <text>IP Address</text>
                </td>

            </tr>
            <td>
                &nbsp;
            </td>
            <tr>
                <td style="margin-right: 10px;"> 
                    @Html.TextBox("searchValue", null, new { Class = "form-control", placeholder = "Enter The Search Field" })
                </td>

                <td>
                    <input type="submit" value="Search" class="btn btn-success searchButton" />
                </td>
            </tr>
            <td>
                &nbsp;
            </td>
        </table>
    }
</div>

</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ITR_Section)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IP_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MAC_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IO_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Switchport_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Domain_Name)
        </th>

        <th>
            Action
        </th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ITR_Section)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IP_Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MAC_Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IO_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Switchport_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Domain_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this record?');" })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="9">No records found.</td>
        </tr>
    }


</table>
